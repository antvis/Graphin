{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true,
    "target": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": false
  },
  "include": ["src"],
  "exclude": ["src/**/demos/*.tsx"]
}
